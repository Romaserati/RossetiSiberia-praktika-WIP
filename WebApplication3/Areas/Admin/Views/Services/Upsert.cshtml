@model ServiceVM

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Service.Id" hidden />
        <input asp-for="Service.ImageUrl" hidden />
        <div class="row">
            <div class="col-10">
                <div class="border p-3 mt-4">
                    <div class="row pb-2">
                        <h2 class="text-primary">@(Model.Service.Id != 0 ? "Редактировать" : "Добавить") услугу</h2>
                        <hr />
                    </div>
                    @* <div asp-validation-summary="All">
                    </div> *@
                    <div class="mb-3">
                        <label asp-for="Service.Name" class="p-0">Название услуги</label>
                        <input asp-for="Service.Name" class="form-control" />
                        <span asp-validation-for="Service.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Service.CategoryId" class="p-0">Категория</label>
                        <select asp-items="@Model.CategoryList" asp-for="@Model.Service.CategoryId" class="form-select">
                            <option disabled selected>Выберите категорию</option>
                        </select>
                        <span asp-validation-for="Service.CategoryId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Service.Description" class="p-0">Описание</label>
                        <input asp-for="Service.Description" class="form-control" />
                        <span asp-validation-for="Service.Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Service.ImageUrl" class="p-0">Фотография услуги</label>
                        <input type="file" name="file" class="form-control" />
                    </div>
                    @{
                        if (Model.Service.Id != 0)
                        {
                            <button class="btn btn-primary" type="submit">Применить</button>
                        }
                        else
                        {
                            <button class="btn btn-primary" type="submit">Создать</button>

                        }
                    }
                    <a asp-controller="Services" asp-action="Index">Назад</a>
                </div>
            </div>
            <div class="col-2">
                <img src="@Model.Service.ImageUrl" width="100%" style="border-radius: 5px; border:1px solid #bbb9b9" />
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
