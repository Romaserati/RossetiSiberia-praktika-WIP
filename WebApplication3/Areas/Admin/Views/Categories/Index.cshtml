@model List<Category>

@{
    ViewData["Title"] = "Админ | Категории";
}
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>Категории</h2>    
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Categories" asp-action="Create">Создать новую категорию</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                ID Категории
            </th>
            <th>
                Название категории
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u => u.Id))
        {        
            <tr>
                <td>
                    @obj.Id
                </td>
                <td>
                    @obj.CategoryName
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Categories" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                            Редактировать
                        </a>
                        <a asp-controller="Categories" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                            Удалить
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
