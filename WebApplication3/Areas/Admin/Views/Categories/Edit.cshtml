@model Category

@{
    ViewData["Title"] = "Админ | Редактирование";
}
<div class="container">
    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Редактирование категории</h2>
                <hr />
            </div>
            @* <div asp-validation-summary="All">
            </div> *@
            <div class="mb-3">
                <label asp-for="CategoryName" class="p-0">Название категории</label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <button class="btn btn-primary" type="submit">Применить</button>
            <a asp-controller="Categories" asp-action="Index">Назад</a>
        </div>
    </form>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
