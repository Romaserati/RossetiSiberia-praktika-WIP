@model List<Service>

<div class="text-center">
    <h1 class="display-4">Добро пожаловать!</h1>
</div>
<div class="row pb-3">
    @foreach (var service in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded   d-flex flex-column bd-highlight mb-3" style="height: 50vh;">
                        <p style="font-size: 14px" class="text-center">@service.Category.CategoryName</p>
                        @if (!string.IsNullOrEmpty(service.ImageUrl))
                        {
                            <img src="@service.ImageUrl" style="width:100%; height: 150px; border-radius: 13px 13px 13px 13px;" class="p-2 bd-highlight" />
                        }
                        <p class="p-2 bd-highlight text-center">@service.Name</p>
                        <a class="btn btn-primary mt-auto p-2 bd-highlight" asp-action="Details" asp-route-serviceId="@service.Id" style="">Подробнее</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
